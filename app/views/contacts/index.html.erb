<div class="page-header">
  <h1 class="page-header__title"><%= t("contacts.title") %></h1>
  <span class="page-header__subtitle txt-muted"><%= t("contacts.total", count: @contacts.count) %></span>
</div>

<% if @contacts.any? %>
  <div class="table-responsive">
    <table class="table table--hover">
      <thead>
        <tr>
          <th><%= t("contacts.fields.name") %></th>
          <th><%= t("contacts.fields.email") %></th>
          <th><%= t("contacts.fields.companies") %></th>
        </tr>
      </thead>
      <tbody>
        <% @contacts.each do |contact| %>
          <tr>
            <td><%= link_to contact.name.presence || t("contacts.no_name"), contact %></td>
            <td class="txt-sm"><%= link_to contact.email, contact %></td>
            <td class="txt-sm">
              <% contact.companies.each do |company| %>
                <%= link_to company.display_name, company_path(company) %><%= ", " unless company == contact.companies.last %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="empty-state">
    <p class="empty-state__message"><%= t("contacts.empty") %></p>
  </div>
<% end %>
