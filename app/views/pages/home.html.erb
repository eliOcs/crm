<% content_for :title, t("landing.title") %>

<div class="landing">
  <!-- Hero Section -->
  <header class="landing__hero">
    <div class="landing__hero-blob" aria-hidden="true"></div>
    <div class="container">
      <div class="landing__hero-content">
        <div class="landing__brand">
          <%= image_tag "logo.svg", class: "landing__logo", alt: "Mercurio" %>
          <span class="landing__brand-name">Mercurio</span>
        </div>
        <h1 class="landing__headline"><%= t("landing.headline_html") %></h1>
        <p class="landing__subheadline"><%= t("landing.subheadline") %></p>
        <div class="landing__cta">
          <%= link_to t("landing.get_started"), new_registration_path, class: "btn btn--primary btn--lg" %>
          <%= link_to t("landing.sign_in"), new_session_path, class: "btn btn--secondary btn--lg" %>
        </div>
      </div>
    </div>
  </header>

  <!-- Features Section -->
  <section class="landing__features">
    <div class="container">
      <div class="landing__features-grid">
        <!-- Feature 1: Contact Extraction -->
        <article class="feature-card">
          <%= image_tag "illustrations/contact-extraction.png", class: "feature-card__illustration", alt: "" %>
          <h2 class="feature-card__title"><%= t("landing.features.extraction.title") %></h2>
          <p class="feature-card__description"><%= t("landing.features.extraction.description") %></p>
        </article>

        <!-- Feature 2: Follow-up Actions -->
        <article class="feature-card">
          <%= image_tag "illustrations/follow-up.png", class: "feature-card__illustration", alt: "" %>
          <h2 class="feature-card__title"><%= t("landing.features.followup.title") %></h2>
          <p class="feature-card__description"><%= t("landing.features.followup.description") %></p>
        </article>

        <!-- Feature 3: Semantic Search -->
        <article class="feature-card">
          <%= image_tag "illustrations/semantic-search.png", class: "feature-card__illustration", alt: "" %>
          <h2 class="feature-card__title"><%= t("landing.features.search.title") %></h2>
          <p class="feature-card__description"><%= t("landing.features.search.description") %></p>
        </article>
      </div>
    </div>
  </section>

  <!-- Value Proposition -->
  <section class="landing__value">
    <div class="container container--narrow">
      <h2 class="landing__section-title"><%= t("landing.value.title") %></h2>
      <p class="landing__section-text"><%= t("landing.value.description") %></p>
    </div>
  </section>

  <!-- Integrations Section -->
  <section class="landing__integrations">
    <div class="container">
      <h2 class="landing__section-title"><%= t("landing.integrations.title") %></h2>
      <div class="landing__integrations-grid">
        <div class="integration-card">
          <div class="integration-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <rect x="2" y="4" width="20" height="16" rx="2"/>
              <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/>
            </svg>
          </div>
          <h3 class="integration-card__title"><%= t("landing.integrations.exchange") %></h3>
          <p class="integration-card__status"><%= t("landing.integrations.coming_soon") %></p>
        </div>
        <div class="integration-card">
          <div class="integration-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M3 3h18v18H3z"/>
              <path d="M3 9h18"/>
              <path d="M9 21V9"/>
            </svg>
          </div>
          <h3 class="integration-card__title"><%= t("landing.integrations.navision") %></h3>
          <p class="integration-card__status"><%= t("landing.integrations.coming_soon") %></p>
        </div>
        <div class="integration-card integration-card--future">
          <div class="integration-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/>
            </svg>
          </div>
          <h3 class="integration-card__title"><%= t("landing.integrations.phone") %></h3>
          <p class="integration-card__status"><%= t("landing.integrations.on_roadmap") %></p>
        </div>
        <div class="integration-card integration-card--future">
          <div class="integration-card__icon">
            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
              <path d="M4 20h16a2 2 0 0 0 2-2V8a2 2 0 0 0-2-2h-7.93a2 2 0 0 1-1.66-.9l-.82-1.2A2 2 0 0 0 7.93 3H4a2 2 0 0 0-2 2v13c0 1.1.9 2 2 2z"/>
              <circle cx="12" cy="13" r="2"/>
              <path d="M12 15v2"/>
            </svg>
          </div>
          <h3 class="integration-card__title"><%= t("landing.integrations.cloud") %></h3>
          <p class="integration-card__status"><%= t("landing.integrations.on_roadmap") %></p>
        </div>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="landing__cta-section">
    <div class="container container--narrow">
      <h2 class="landing__section-title"><%= t("landing.cta.title") %></h2>
      <p class="landing__section-text"><%= t("landing.cta.description") %></p>
      <div class="landing__cta">
        <%= link_to t("landing.create_account"), new_registration_path, class: "btn btn--primary btn--lg" %>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="landing__footer">
    <div class="container">
      <div class="landing__footer-grid">
        <!-- Brand & Legal Entity -->
        <div class="landing__footer-brand">
          <div class="landing__brand landing__brand--small">
            <%= image_tag "logo.svg", class: "landing__logo", alt: "Mercurio" %>
            <span class="landing__brand-name">Mercurio</span>
          </div>
          <p class="landing__footer-legal">
            Elio Capella SÃ¡nchez<br>
            NIF: 05306867P<br>
            C/ Roncesvalles 3<br>
            28760 Tres Cantos, Madrid<br>
            <%= t("landing.footer.spain") %>
          </p>
        </div>

        <!-- Product Links -->
        <div class="landing__footer-col">
          <h4 class="landing__footer-heading"><%= t("landing.footer.product") %></h4>
          <ul class="landing__footer-links">
            <li><%= link_to t("landing.footer.features"), "#features" %></li>
            <li><%= link_to t("landing.footer.integrations"), "#integrations" %></li>
            <li><span class="landing__footer-coming-soon"><%= t("landing.footer.pricing") %> (<%= t("landing.integrations.coming_soon") %>)</span></li>
          </ul>
        </div>

        <!-- Legal Links -->
        <div class="landing__footer-col">
          <h4 class="landing__footer-heading"><%= t("landing.footer.legal") %></h4>
          <ul class="landing__footer-links">
            <li><%= link_to t("landing.footer.privacy_policy"), privacy_policy_path %></li>
            <li><%= link_to t("landing.footer.terms_of_service"), terms_of_service_path %></li>
          </ul>
        </div>

        <!-- Support Links -->
        <div class="landing__footer-col">
          <h4 class="landing__footer-heading"><%= t("landing.footer.support") %></h4>
          <ul class="landing__footer-links">
            <li><%= mail_to "support@mercuriocrm.es", t("landing.footer.contact_us") %></li>
            <li><span class="landing__footer-coming-soon"><%= t("landing.footer.help_center") %> (<%= t("landing.integrations.coming_soon") %>)</span></li>
            <li><span class="landing__footer-coming-soon"><%= t("landing.footer.security") %> (<%= t("landing.integrations.coming_soon") %>)</span></li>
          </ul>
        </div>
      </div>

      <div class="landing__footer-bottom">
        <p class="landing__copyright">&copy; <%= Date.current.year %> Mercurio. <%= t("landing.footer.rights_reserved") %></p>
      </div>
    </div>
  </footer>
</div>
