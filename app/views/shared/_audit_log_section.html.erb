<section class="section">
  <div class="section__header">
    <h2 class="section__title"><%= t("audit_log.title") %></h2>
  </div>

  <div class="table-responsive">
    <table class="table table--compact">
      <thead>
        <tr>
          <th><%= t("audit_log.fields.date") %></th>
          <th><%= t("audit_log.fields.action") %></th>
          <th><%= t("audit_log.fields.message") %></th>
          <th><%= t("audit_log.fields.by") %></th>
          <th><%= t("audit_log.fields.source") %></th>
          <th><%= t("audit_log.fields.changes") %></th>
        </tr>
      </thead>
      <tbody id="audit_log_entries">
        <% record.audit_logs.order(created_at: :desc).each do |log| %>
          <%= render partial: "audit_logs/audit_log", locals: { audit_log: log } %>
        <% end %>
      </tbody>
    </table>
  </div>

  <% if record.audit_logs.empty? %>
    <p class="txt-subtle"><%= t("audit_log.empty") %></p>
  <% end %>
</section>
