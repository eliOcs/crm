<div class="auth-layout">
  <div class="auth-layout__card">
    <%= image_tag "logo.svg", class: "auth-layout__logo", alt: "CRM" %>

    <h1 class="auth-layout__title">Reset password</h1>

    <div class="flash-container">
      <% if flash[:alert] %>
        <div class="flash flash--alert"><%= flash[:alert] %></div>
      <% end %>
      <% if flash[:notice] %>
        <div class="flash flash--notice"><%= flash[:notice] %></div>
      <% end %>
    </div>

    <%= form_with url: password_path(params[:token]), method: :put, class: "form" do |form| %>
      <div class="field">
        <%= form.label :password, "New password" %>
        <%= form.password_field :password, required: true, autofocus: true, autocomplete: "new-password", placeholder: "Create a new password", maxlength: 72 %>
      </div>

      <div class="field">
        <%= form.label :password_confirmation, "Confirm password" %>
        <%= form.password_field :password_confirmation, required: true, autocomplete: "new-password", placeholder: "Confirm your new password", maxlength: 72 %>
      </div>

      <div class="form__actions">
        <%= form.submit "Reset password", class: "btn btn--primary btn--block" %>
      </div>
    <% end %>

    <p class="auth-layout__footer">
      <%= link_to "Back to sign in", new_session_path %>
    </p>
  </div>
</div>
