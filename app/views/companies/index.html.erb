<div class="page-header">
  <h1 class="page-header__title">Companies</h1>
  <span class="page-header__subtitle txt-muted"><%= @companies.count %> total</span>
</div>

<% if @companies.any? %>
  <div class="table-responsive">
    <table class="table table--hover">
      <thead>
        <tr>
          <th class="table__logo">Logo</th>
          <th>Name</th>
          <th>Website</th>
          <th class="txt-end">Contacts</th>
        </tr>
      </thead>
      <tbody>
        <% @companies.each do |company| %>
          <tr>
            <td class="table__logo">
              <% if company.logo.attached? %>
                <%= image_tag company.logo %>
              <% end %>
            </td>
            <td><%= link_to company.display_name, company_path(company) %></td>
            <td>
              <% if company.website.present? %>
                <%= link_to company.website, company.website, target: "_blank", class: "txt-sm" %>
              <% end %>
            </td>
            <td class="txt-end"><%= company.contacts.count %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="empty-state">
    <p class="empty-state__message">No companies yet.</p>
  </div>
<% end %>
